<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TabHost 
        android:id="@android:id/tabhost"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent" 
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#ff3faefc"
                >
                <ImageView
                    android:id="@+id/group_main_titlebar_btn_back"
                    android:src="@drawable/group_main_titlebar_btn_back"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:scaleType="fitCenter"
                    android:contentDescription="돌아가기"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textColor="#ffffffff"
                    android:textSize="26dp"
                    android:gravity="center"
                    android:text="그룹명"
                    />
                <ImageView
                    android:src="@drawable/group_main_titlebar_btn_search"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:scaleType="fitCenter"
                    android:contentDescription="검색"
                    />               
            </RelativeLayout>
            <TabWidget
                android:id="@android:id/tabs" 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <FrameLayout
                android:id="@android:id/tabcontent" 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
            </FrameLayout>
        </LinearLayout>
    </TabHost>
</LinearLayout>
